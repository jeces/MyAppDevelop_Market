<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag.AddFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="30dp"
                android:id="@+id/img_profile"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="vertical"
                tools:listitem="@layout/img_item_list"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/ProductNameLayout"/>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/ProductNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="ProductName"
                app:helperTextTextColor="@color/red"
                app:helperText="Required*"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_baseline_production_quantity_limits_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_profile"
                android:layout_marginHorizontal="32dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productName"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:id="@+id/ProductPriceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:hint="ProductPrice"
                app:helperTextTextColor="@color/red"
                app:helperText="Required*"
                app:counterEnabled="true"
                app:counterMaxLength="30"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ProductNameLayout"
                android:layout_marginHorizontal="32dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/productPrice"
                    android:maxLength="30"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:hint="ProductDescription"
                android:textSize="18sp"
                android:background="@android:color/transparent"
                android:padding="4dp"
                android:inputType="textMultiLine"
                android:maxLength="500"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
                app:layout_constraintTop_toBottomOf="@+id/ProductPriceLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="32dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/imgBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ImgAdd"
                android:background="@drawable/add_bt"
                app:icon="@drawable/ic_baseline_upload_file_24"
                app:backgroundTintMode="screen"
                app:layout_constraintTop_toBottomOf="@+id/productDescription"
                app:layout_constraintEnd_toStartOf="@id/guidelineAdd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginVertical="10dp"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" /> <!-- 50% 위치에 Guideline 생성 -->

            <com.google.android.material.button.MaterialButton
                android:id="@+id/addBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Add"
                android:background="@drawable/add_bt"
                app:icon="@drawable/ic_baseline_add_circle_24"
                app:backgroundTintMode="screen"
                app:layout_constraintTop_toBottomOf="@+id/productDescription"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/guidelineAdd"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="32dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>