<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.InfoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/infoPhoto"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scrollInfo" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/imginfo_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:listitem="@layout/img_item_list" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/infoPhoto" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/lin1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/productDetailName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:text="이름"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <View
                        android:id="@+id/your_view1"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="10"/>

                    <TextView
                        android:id="@+id/productDetailPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:text="가격"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        tools:ignore="RtlHardcoded" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linlin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintTop_toBottomOf="@+id/lin1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#333333"
                        app:layout_constraintBottom_toTopOf="@+id/btnDetailDelete" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#333333"
                        app:layout_constraintBottom_toTopOf="@+id/btnDetailDelete" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/linlin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="입찰가 : "
                        android:layout_marginStart="32dp"
                        android:textStyle="bold"
                        android:textSize="20sp"/>


                    <TextView
                        android:id="@+id/product_info_bid_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginEnd="32dp"
                        android:text="가격"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        tools:ignore="RtlHardcoded" />

                    <View
                        android:id="@+id/your1_view1"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:layout_weight="10"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"/>

                    <ImageView
                        android:id="@+id/product_chat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ic_baseline_chat_bubble_outline_24"/>

                    <TextView
                        android:id="@+id/product_chat_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99"/>

                    <ImageView
                        android:id="@+id/product_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/ic_baseline_visibility_24"/>

                    <TextView
                        android:id="@+id/product_view_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="999"/>

                    <ImageButton
                        android:id="@+id/product_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:adjustViewBounds="true"
                        android:checked="true"
                        android:background="@color/white"
                        android:src="@xml/check_selector"/>

                    <TextView
                        android:id="@+id/product_check_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="32dp"
                        android:text="999"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/productDetailDescription"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:textSize="18sp"
                    android:background="@android:color/transparent"
                    android:padding="4dp"
                    android:text="내용없음"
                    android:inputType="textMultiLine"
                    android:maxLength="500"
                    app:endIconMode="clear_text"
                    app:startIconDrawable="@drawable/ic_baseline_attach_money_24"
                    app:layout_constraintTop_toBottomOf="@+id/lin2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginHorizontal="32dp"
                    tools:ignore="MissingConstraints">

                </TextView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/now_purchase_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_bt"
                    android:text="PERCHASE"
                    app:backgroundTintMode="screen"
                    app:layout_constraintTop_toBottomOf="@+id/productDetailDescription"
                    app:layout_constraintEnd_toStartOf="@id/guidelineInfo1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginVertical="10dp"
                    />

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineInfo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.3333333" /> <!-- 50% 위치에 Guideline 생성 -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/chat_start_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_bt"
                    android:text="CHAT"
                    app:backgroundTintMode="screen"
                    app:layout_constraintTop_toBottomOf="@+id/productDetailDescription"
                    app:layout_constraintEnd_toStartOf="@id/guidelineInfo2"
                    app:layout_constraintStart_toEndOf="@id/guidelineInfo1"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginVertical="10dp"/>

                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guidelineInfo2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.6666666" /> <!-- 50% 위치에 Guideline 생성 -->

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/price_add_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/info_bt"
                    android:text="ADD"
                    app:backgroundTintMode="screen"
                    app:layout_constraintTop_toBottomOf="@+id/productDetailDescription"
                    app:layout_constraintStart_toEndOf="@id/guidelineInfo2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_chainStyle="spread"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginVertical="10dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>