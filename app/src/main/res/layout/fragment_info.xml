<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.InfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <View
            android:id="@+id/imginfo_profile_view1"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/imginfo_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/img_item_list" />

        <View
            android:id="@+id/imginfo_profile_view2"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="320dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productDetailName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:text="이름"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <View
                    android:id="@+id/your_view1"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="10"/>

                <TextView
                    android:id="@+id/productDetailPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:text="가격"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginTop="35dp"
                    app:layout_constraintBottom_toTopOf="@+id/btnDetailDelete" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/your1_view1"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:layout_weight="10"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"/>

                <ImageView
                    android:id="@+id/product_chat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_baseline_chat_bubble_outline_24"/>

                <TextView
                    android:id="@+id/product_chat_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="99"/>

                <ImageView
                    android:id="@+id/product_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_baseline_visibility_24"/>

                <TextView
                    android:id="@+id/product_view_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="999"/>

                <ImageView
                    android:id="@+id/product_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@drawable/ic_baseline_check_circle_outline_24"/>

                <TextView
                    android:id="@+id/product_check_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="32dp"
                    android:text="999"/>
            </LinearLayout>

            <TextView
                android:id="@+id/productDetailDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="90dp"
                android:text="내용"
                android:textSize="15dp">
            </TextView>

            <Button
                android:id="@+id/chat_start_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="290dp"
                android:text="@string/chatting" />

            <Button
                android:id="@+id/price_add_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="130dp"
                android:layout_marginTop="290dp"
                android:text="@string/bidding" />
        </FrameLayout>
    </ScrollView>
</FrameLayout>