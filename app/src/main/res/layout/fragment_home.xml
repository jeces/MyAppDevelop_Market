<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="ProductViewModel"
            type="com.example.applicationjeces.product.ProductViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/homeScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- 상단 이미지 뷰 -->
            <FrameLayout
                android:id="@+id/adverMain"
                android:layout_width="0dp"
                android:layout_height="300dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/section_divider_1">

                <!-- 사진 리사이클러 뷰 옆으로 넘기는 -->
                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPagerHomeProduce"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                    android:id="@+id/dots_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="16dp"
                    app:dotsColor="@android:color/black"
                    app:dotsCornerRadius="8dp"
                    app:dotsSize="7dp"
                    app:dotsSpacing="4dp"
                    app:dotsWidthFactor="2.5"
                    app:selectedDotColor="@android:color/darker_gray"
                    app:progressMode="false"/>

                <!-- 상단바 이미지 버튼 -->
                <ImageButton
                    android:id="@+id/toolbarImageButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginEnd="25dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/ic_baseline_menu_24"
                    android:src="@drawable/ic_baseline_menu_24"
                    android:contentDescription="Options"/>
            </FrameLayout>

            <!-- Section Divider 1 -->
            <View
                android:id="@+id/section_divider_1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/adverMain" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/homelinear"
                android:orientation="vertical"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/section_divider_1"
                app:layout_constraintBottom_toTopOf="@+id/section_divider_2">

                <TextView
                    android:id="@+id/homeRecentTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="32dp"
                    android:textColor="#333333"
                    android:fontFamily="@font/font_font"
                    android:text="Recent Ten Product"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <!-- 사진 리사이클러 뷰 옆으로 넘기는 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productRecentTen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:spanCount="5"
                    tools:listitem="@layout/product_item_list" />


                <TextView
                    android:id="@+id/homeHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="32dp"
                    android:fontFamily="@font/font_font"
                    android:text="Manay Heart Product"
                    android:layout_marginTop="180dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />

                <!-- 사진 리사이클러 뷰 옆으로 넘기는 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="200dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:spanCount="5"
                    tools:listitem="@layout/product_item_list" />

                <TextView
                    android:id="@+id/homeView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="32dp"
                    android:text="Manay View Product"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_font"
                    android:layout_marginTop="360dp"
                    tools:ignore="SmallSp" />

                <!-- 사진 리사이클러 뷰 옆으로 넘기는 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productViewCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="380dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/product_item_list" />

                <TextView
                    android:id="@+id/homeRecentHeart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="32dp"
                    android:text="Rcent Heart Many Product"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_font"
                    android:layout_marginTop="540dp"
                    tools:ignore="SmallSp" />

                <!-- 사진 리사이클러 뷰 옆으로 넘기는 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productRecentHeart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="560dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/product_item_list" />

                <TextView
                    android:id="@+id/homeRecentView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="32dp"
                    android:text="Rcent View Many Product"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_font"
                    android:layout_marginTop="720dp"
                    tools:ignore="SmallSp" />

                <!-- 사진 리사이클러 뷰 옆으로 넘기는 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/productRecentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="740dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/product_item_list" />

            </FrameLayout>

            <!-- Section Divider 2 -->
            <View
                android:id="@+id/section_divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@+id/homelinear" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
